<div class="container">
  <div class="show-card">
    <h3><%= @script.name %></h3>
    <%= link_to script_path(@script), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_dose"></i>
    <% end %>
  </div>


  <div>

    <div class="menu-bar">
      <h3> my scenes </h3>
      <h3> my roles </h3>
    </div>

    <div>
      <% @scenes.each do |scene| %>
        <h4><%= scene.number %>: <%= link_to script_scene_path(@script, scene) do %> <%= scene.name %></h4>
        <i class="fa fa-trash destroy_dose"></i>
        <% end %>
        <p><%= scene.body %></p>
    <% end %>
    </div>
  </div>

  <hr>
  <%= link_to 'add scene', new_script_scene_path(@script), class: 'btn btn-danger' %>
  <%= link_to "back", scripts_path  %>
</div>

